{% extends 'base.html.twig' %}

{% block title %}Popular Movies{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h1 class="text-4xl font-extrabold text-gray-900 mb-8 text-center">Most popular movies</h1>

        <form method="GET" action="{{ path('movie_list') }}" class="mb-6">
            <label for="search" class="sr-only">Search</label>
            <div class="relative flex items-center">
                <input
                    type="search"
                    name="q"
                    id="search"
                    value="{{ searchQuery }}"
                    placeholder="Search by Title or Director..."
                    class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 text-sm"
                >
                <svg class="absolute left-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                </svg>
                <button type="submit" class="ml-2 px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Search
                </button>
            </div>
        </form>
        <div class="shadow overflow-hidden border-b border-grey-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-grey-200 shadow">
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{ knp_pagination_sortable(pagination, 'Rank', 'm.id') }}
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{ knp_pagination_sortable(pagination, 'Title', 'm.title') }}
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{ knp_pagination_sortable(pagination, 'Director', 'd.name') }}
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{ knp_pagination_sortable(pagination, 'Release Date', 'm.releaseDate') }}
                    </th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for movie in pagination %}
                    <tr class="{% if loop.index is odd %}bg-gray-50{% else %}bg-white{% endif %} hover:bg-indigo-50 transition duration-150">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ movie.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-indigo-600">
                            <a href="{{ path('movie_detail', {id: movie.id}) }}"
                                class="text-indigo-600 hover:text-indigo-900 font-bold">
                                {{ movie.title }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ movie.director.name }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ movie.releaseDate|date('Y-m-d') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                            No movies found.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="mt-6 flex justify-between items-center flex-wrap">
            <div class="summary text-sm text-gray-700 order-2 sm:order-1 mt-4 sm:mt-0">
                {% set itemsPerPage = pagination.getItemNumberPerPage() %}
                {% set currentPage = pagination.getCurrentPageNumber() %}
                {% set totalItems = pagination.getTotalItemCount() %}
                {% set totalItemsOnPage = pagination|length %}

                {% set startItem = (currentPage - 1) * itemsPerPage + 1 %}
                {% set endItem = (currentPage - 1) * itemsPerPage + totalItemsOnPage %}

                Showing
                <span class="font-semibold text-gray-900">{{ startItem }}</span> -
                <span class="font-semibold text-gray-900">{{ endItem }}</span>
                of
                <span class="font-semibold text-gray-900">{{ totalItems }}</span> results.
            </div>

            <div class="navigation order-1 sm:order-2">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
